<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarkView">
        <attr name="dotSize" format="dimension"/>
        <attr name="tipSize" format="dimension"/>
        <attr name="tipTextColor" format="color"/>
        <attr name="tipBgColor" format="color"/>
        <attr name="tipStrokeColor" format="color"/>
        <attr name="tipStrokeWidth" format="dimension"/>
        <attr name="contentText" format="string|reference"/>
        <attr name="contentTextSize" format="dimension"/>
        <attr name="contentTextColor" format="color"/>
        <attr name="contentImg" format="reference"/>
        <attr name="tipNumber" format="string"/>
        <attr name="tipBgEnable" format="boolean"/>
        <attr name="tipStrokeEnable" format="boolean"/>
        <attr name="emptyVisible" format="boolean"/>
        <attr name="xOffset" format="dimension"/>
        <attr name="yOffset" format="dimension"/>
        <attr name="tipLrMargin" format="dimension"/>
        <attr name="tipTbMargin" format="dimension"/>
        <attr name="markMode" format="enum">
            <enum name="modeDef" value="0"/>
            <enum name="textNone" value="1"/>
            <enum name="textDot" value="2"/>
            <enum name="textNum" value="3"/>
            <enum name="imgNone" value="4"/>
            <enum name="imgDot" value="5"/>
            <enum name="imgNum" value="6"/>
        </attr>
    </declare-styleable>
</resources>